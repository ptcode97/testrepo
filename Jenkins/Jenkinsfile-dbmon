pipeline {
  agent any
  parameters {
    string(name: 'projectName', defaultValue: 'psapp', description: 'Project name to create or target for update')
  }

  stages {
    stage('Create project') {
    steps {
        sh """cd openshift
oc login https://localhost:8443 --username developer --password developer --insecure-skip-tls-verify=true
if ! oc project ${projectName}
then
  oc new-project ${projectName}
fi"""
      }
    }
    stage('Build add or update dbmon configuration') {
      steps {
        sh """cd openshift
oc login https://localhost:8443 --username developer --password developer --insecure-skip-tls-verify=true
oc project ${projectName}
oc apply -f dbmon-imagestream.yaml
oc import-image dbmon --from=docker.io/prom/mysqld-exporter:v0.13.0 --confirm"""
        }
    }
    stage('Deploy dbmon Container To Openshift') {
      steps {
        sh """cd openshift
oc login https://localhost:8443 --username developer --password developer --insecure-skip-tls-verify=true
oc project ${projectName}
oc apply -f dbmon-service.yaml
oc apply -f dbmon-deploymentconfig.yaml
oc deploy dc/dbmon"""
      }
    }
  }
}
